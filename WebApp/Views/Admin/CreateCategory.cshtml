@model WebApp.Models.tbl_category

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Category - My ASP.NET Application</title>
    <style>
        /* Your styles here */
    </style>
</head>
<body>
    <div class="container">
        <h1>Create Category</h1>
        @using (Html.BeginForm("CreateCategory", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.cat_name)
                @Html.TextBoxFor(m => m.cat_name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.cat_name)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.cat_image)
                @Html.TextBoxFor(m => m.cat_image, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.cat_image)
            </div>

            <button type="submit">Create</button>
        }
    </div>
</body>
</html>
