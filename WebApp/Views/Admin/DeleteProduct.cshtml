@model WebApp.Models.tbl_product

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Product - My ASP.NET Application</title>
</head>
<body>
    <div class="container">
        <h2>Delete Product</h2>
        <h3>Are you sure you want to delete this product?</h3>
        <div>
            <h4>@Model.pro_name</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>Price</dt>
                <dd>@Model.pro_price</dd>
                <dt>Description</dt>
                <dd>@Model.pro_desc</dd>
            </dl>

            @using (Html.BeginForm("DeleteProductConfirmed", "Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.pro_id)
                <button type="submit" class="btn btn-danger">Delete</button>
                @Html.ActionLink("Cancel", "ManageProducts", null, new { @class = "btn btn-default" })
            }
        </div>
    </div>
</body>
</html>
